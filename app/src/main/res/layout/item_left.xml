<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:background="@color/actionBg">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/checkBg"
        android:visibility="invisible"
        android:id="@+id/check_bg"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deleteBg"
        android:visibility="invisible"
        android:id="@+id/delete_bg"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/action_check"
        android:src="@drawable/ic_check_circle_white_36dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/action_delete"
        android:src="@drawable/ic_delete_white_36dp"
        android:visibility="invisible"/>
</RelativeLayout>